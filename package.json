{
    "name": "text-utils",
    "displayName": "text-utils",
    "description": "Simple Text Utils",
    "version": "0.0.3",
    "publisher": "qux-bbb",
    "engines": {
        "vscode": "^1.51.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qux-bbb/text-utils"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "text-utils.extension.checkTaskList",
                "title": "Check TODO"
            },
            {
                "command": "text-utils.extension.reverseString",
                "title": "Reverse String"
            },
            {
                "command": "text-utils.extension.transformToLowercase",
                "title": "To Lowercase"
            },
            {
                "command": "text-utils.extension.transformToUppercase",
                "title": "To Uppercase"
            },
            {
                "command": "text-utils.extension.transformToTitleCase",
                "title": "To Titlecase"
            },
            {
                "command": "text-utils.extension.transformToUnorderedList",
                "title": "To UnorderedList"
            },
            {
                "command": "text-utils.extension.transformToOrderedList",
                "title": "To OrderedList"
            },
            {
                "command": "text-utils.extension.base64Encode",
                "title": "Base64 Encode"
            },
            {
                "command": "text-utils.extension.base64Decode",
                "title": "Base64 Decode"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "text-utils.extension.checkTaskList",
                    "when": "editorTextFocus",
                    "group": "text-utils@1"
                },
                {
                    "command": "text-utils.extension.reverseString",
                    "when": "editorHasSelection",
                    "group": "text-utils@2"
                },
                {
                    "submenu": "text-utils/case",
                    "group": "text-utils@3"
                },
                {
                    "submenu": "text-utils/list",
                    "group": "text-utils@4"
                },
                {
                    "submenu": "text-utils/base64",
                    "group": "text-utils@5"
                }

            ],
            "text-utils/case":[
                {
                    "command": "text-utils.extension.transformToLowercase",
                    "when": "editorHasSelection",
                    "group": "text-utils@3"
                },
                {
                    "command": "text-utils.extension.transformToUppercase",
                    "when": "editorHasSelection",
                    "group": "text-utils@3"
                },
                {
                    "command": "text-utils.extension.transformToTitleCase",
                    "when": "editorHasSelection",
                    "group": "text-utils@3"
                }
            ],
            "text-utils/list":[
                {
                    "command": "text-utils.extension.transformToUnorderedList",
                    "when": "editorHasSelection",
                    "group": "text-utils@4"
                },
                {
                    "command": "text-utils.extension.transformToOrderedList",
                    "when": "editorHasSelection",
                    "group": "text-utils@4"
                }
            ],
            "text-utils/base64":[
                {
                    "command": "text-utils.extension.base64Encode",
                    "when": "editorHasSelection",
                    "group": "text-utils@5"
                },
                {
                    "command": "text-utils.extension.base64Decode",
                    "when": "editorHasSelection",
                    "group": "text-utils@5"
                }
            ]
        },
        "submenus": [
            {
                "id": "text-utils/case",
                "label": "Case"
            },
            {
                "id": "text-utils/list",
                "label": "List"
            },
            {
                "id": "text-utils/base64",
                "label": "Base64"
            }
        ],
        "keybindings": [
            {
                "command": "text-utils.extension.checkTaskList",
                "key": "alt+x",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.51.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    }
}